            <i class="fas fa-sync-alt"></i>
            Actualizar Vista
          </button>
          
          <button class="btn btn-danger" onclick="clearAdditionalFields()">
            <i class="fas fa-trash-alt"></i>
            Limpiar Campos
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- CONTENEDOR DE MENSAJES -->
  <div class="message-container" id="messageContainer"></div>
  
  <!-- JAVASCRIPT COMPLETO -->
  <script>
    // Variables globales
    let isSubmitting = false;
    let selectedFile = null;
    
    // Inicializaci√≥n
    document.addEventListener('DOMContentLoaded', function() {
      console.log('=== FORMULARIO CARGADO ===');
      
      // Actualizar vista previa inicial
      updatePreview();
      
      // Deshabilitar todos los campos de solo lectura
      disableReadOnlyFields();
      
      // Inicializar subida de archivos
      initFileUpload();
      
      // Mostrar mensaje inicial si hay datos
      if ('<?= dni ?>') {
        showMessage('Datos del sistema cargados correctamente', 'success', '¬°Listo!');
      }
    });
    
    // Deshabilitar campos de solo lectura
    function disableReadOnlyFields() {
      const readOnlyFields = document.querySelectorAll('.read-only-field');
      readOnlyFields.forEach(field => {
        field.setAttribute('readonly', 'true');
        field.style.cursor = 'default';
      });
    }
    
    // Actualizar vista previa
    function updatePreview() {
      const previewList = document.getElementById('previewList');
      const fields = [
        { id: 'dni', label: 'DNI' },
        { id: 'fecha', label: 'Fecha' },
        { id: 'nombres_apellidos', label: 'Nombre' },
        { id: 'asiste', label: '√öltima Asistencia' },
        { id: 'cargo', label: 'Cargo' },
        { id: 'codigo_id', label: 'C√≥digo ID' },
        { id: 'compensado', label: 'Compensado' },
        { id: 'fecha_compensado', label: 'Fecha Compensado' }
      ];
      
      let html = '';
      
      fields.forEach(field => {
        const element = document.getElementById(field.id);
        let value = element ? element.value : '';
        
        // Formatear valores vac√≠os
        if (!value || value.trim() === '') {
          if (field.id === 'compensado' || field.id === 'fecha_compensado') {
            value = '<span style="color: #999; font-style: italic;">Pendiente</span>';
          } else if (field.id === 'codigo_id') {
            value = '<span style="color: #EA4335; font-weight: 600;">‚ö†Ô∏è Requerido para archivos</span>';
          } else {
            value = '<span style="color: #999; font-style: italic;">No especificado</span>';
          }
        }
        
        // Formatear fechas
        if (field.id.includes('fecha') && value && !value.includes('Pendiente') && !value.includes('especificado')) {
          const date = new Date(value);
          if (!isNaN(date.getTime())) {
            value = date.toLocaleDateString('es-ES');
          }
        }
        
        // Estilo diferente para campos editables
        const isEditable = (field.id === 'compensado' || field.id === 'fecha_compensado');
        let valueStyle = isEditable ? 'color: #4285f4; font-weight: 600;' : 'color: #333;';
        
        // Estilo especial para c√≥digo ID si est√° vac√≠o
        if (field.id === 'codigo_id' && (!element.value || element.value.trim() === '')) {
          valueStyle = 'color: #EA4335; font-weight: 600;';
        }
        
        html += `
          <div class="preview-item">
            <span class="preview-label">${field.label}:</span>
            <span class="preview-value" style="${valueStyle}">${value}</span>
          </div>
        `;
      });
      
      // Agregar informaci√≥n de archivo si hay
      if (selectedFile) {
        html += `
          <div class="preview-item">
            <span class="preview-label">Archivo:</span>
            <span class="preview-value" style="color: #34A853; font-weight: 600;">
              <i class="fas fa-paperclip"></i> ${selectedFile.name} (${formatFileSize(selectedFile.size)})
            </span>
          </div>
        `;
      }
      
      previewList.innerHTML = html;
    }
    
    // Inicializar subida de archivos
    function initFileUpload() {
      const uploadArea = document.getElementById('fileUploadArea');
      const fileInput = document.getElementById('archivoInput');
      
      // Click en el √°rea
      uploadArea.addEventListener('click', function(e) {
        if (e.target.tagName !== 'BUTTON' && !selectedFile) {
          fileInput.click();
        }
      });
      
      // Selecci√≥n de archivo
      fileInput.addEventListener('change', function(e) {
        if (this.files && this.files[0]) {
          handleFileSelect(this.files[0]);
        }
      });
      
      // Arrastrar y soltar
      uploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        uploadArea.classList.add('drag-over');
      });
      
      uploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('drag-over');
      });
      
      uploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('drag-over');
        
        if (e.dataTransfer.files && e.dataTransfer.files[0]) {
          handleFileSelect(e.dataTransfer.files[0]);
        }
      });
    }
    
    // Manejar selecci√≥n de archivo
    function handleFileSelect(file) {
      console.log('Archivo seleccionado:', file.name, 'Tama√±o:', formatFileSize(file.size), 'Tipo:', file.type);
      
      // Validar tama√±o (20MB)
      if (file.size > 20 * 1024 * 1024) {
        showMessage('El archivo excede el tama√±o m√°ximo de 20MB', 'error', 'Archivo muy grande');
        return;
      }
      
      // Verificar si hay c√≥digo ID
      const codigoId = document.getElementById('codigo_id').value;
      if (!codigoId || codigoId.trim() === '') {
        showMessage(
          'Para subir archivos, primero debes tener un valor en el campo "C√≥digo ID"', 
          'error', 
          'C√≥digo ID requerido'
        );
        return;
      }
      
      selectedFile = file;
      showFilePreview(file);
      updatePreview();
      showMessage('Archivo listo para subir: ' + file.name, 'success', 'Archivo cargado');
    }
    
    // Mostrar vista previa del archivo
    function showFilePreview(file) {
      const uploadPlaceholder = document.getElementById('uploadPlaceholder');
      const filePreview = document.getElementById('filePreview');
      const fileName = document.getElementById('fileName');
      const fileSize = document.getElementById('fileSize');
      const fileType = document.getElementById('fileType');
      const fileIcon = document.getElementById('fileIcon');
      const fileStatus = document.getElementById('fileStatus');
      
      // Ocultar placeholder, mostrar preview
      uploadPlaceholder.style.display = 'none';
      filePreview.style.display = 'block';
      
      // Actualizar informaci√≥n
      fileName.textContent = file.name;
      fileSize.textContent = formatFileSize(file.size);
      fileType.textContent = getFileType(file.type);
      fileStatus.innerHTML = '<i class="fas fa-clock"></i> Listo para subir';
      fileStatus.style.color = '#4285f4';
      
      // Cambiar icono seg√∫n tipo
      const iconClass = getFileIconClass(file.type);
      fileIcon.innerHTML = `<i class="fas ${iconClass}"></i>`;
    }
    
    // Limpiar archivo del formulario (solo interfaz)
    function clearFileFromForm() {
      const uploadPlaceholder = document.getElementById('uploadPlaceholder');
      const filePreview = document.getElementById('filePreview');
      const fileInput = document.getElementById('archivoInput');
      
      console.log('Limpiando archivo del formulario');
      
      selectedFile = null;
      fileInput.value = '';
      
      // Restaurar vista
      uploadPlaceholder.style.display = 'block';
      filePreview.style.display = 'none';
      
      updatePreview();
      showMessage('Archivo removido del formulario', 'info', 'Formulario');
    }
    
    // Funciones auxiliares para archivos
    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
    
    function getFileType(mimeType) {
      const types = {
        'application/pdf': 'PDF Document',
        'image/jpeg': 'JPEG Image',
        'image/jpg': 'JPEG Image',
        'image/png': 'PNG Image',
        'image/gif': 'GIF Image',
        'application/msword': 'Word Document',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document': 'Word Document',
        'application/vnd.ms-excel': 'Excel Spreadsheet',
        'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet': 'Excel Spreadsheet',
        'text/plain': 'Text File',
        'text/csv': 'CSV File'
      };
      return types[mimeType] || mimeType;
    }
    
    function getFileIconClass(mimeType) {
      const icons = {
        'application/pdf': 'fa-file-pdf',
        'image/jpeg': 'fa-file-image',
        'image/jpg': 'fa-file-image',
        'image/png': 'fa-file-image',
        'image/gif': 'fa-file-image',
        'application/msword': 'fa-file-word',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document': 'fa-file-word',
        'application/vnd.ms-excel': 'fa-file-excel',
        'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet': 'fa-file-excel',
        'text/plain': 'fa-file-alt',
        'text/csv': 'fa-file-csv'
      };
      return icons[mimeType] || 'fa-file';
    }
    
    // Mostrar mensaje
    function showMessage(text, type = 'info', title = '') {
      const messageContainer = document.getElementById('messageContainer');
      const messageId = 'msg_' + Date.now();
      
      const icons = {
        success: '‚úÖ',
        error: '‚ùå',
        warning: '‚ö†Ô∏è',
        info: '‚ÑπÔ∏è'
      };
      
      const messageHTML = `
        <div class="message ${type}" id="${messageId}">
          <div class="message-icon">${icons[type] || icons.info}</div>
          <div class="message-content">
            ${title ? `<div class="message-title">${title}</div>` : ''}
            <div>${text}</div>
          </div>
          <button class="message-close" onclick="closeMessage('${messageId}')">
            <i class="fas fa-times"></i>
          </button>
        </div>
      `;
      
      messageContainer.insertAdjacentHTML('afterbegin', messageHTML);
      
      // Auto-remover despu√©s de tiempo
      if (type === 'success' || type === 'info') {
        setTimeout(() => {
          closeMessage(messageId);
        }, 5000);
      }
    }
    
    // Cerrar mensaje
    function closeMessage(messageId) {
      const message = document.getElementById(messageId);
      if (message) {
        message.style.animation = 'slideIn 0.3s ease-out reverse';
        setTimeout(() => {
          if (message.parentNode) {
            message.parentNode.removeChild(message);
          }
        }, 300);
      }
    }
    
    // Mostrar/ocultar loading
    function showLoading(text = 'Guardando registro...') {
      document.getElementById('loadingText').textContent = text;
      document.getElementById('loadingOverlay').style.display = 'flex';
    }
    
    function hideLoading() {
      document.getElementById('loadingOverlay').style.display = 'none';
    }
    
    // Funci√≥n para convertir archivo a Base64
    function convertFileToBase64(file) {
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        
        reader.onloadend = function() {
          const base64 = reader.result;
          
          // Extraer solo la parte Base64 (despu√©s de la coma)
          let base64Data;
          if (base64.includes(',')) {
            base64Data = base64.split(',')[1];
          } else {
            base64Data = base64;
          }
          
          // Validar que no est√© vac√≠o
          if (!base64Data || base64Data.trim() === '') {
            reject(new Error('Los datos Base64 est√°n vac√≠os'));
            return;
          }
          
          resolve({
            base64: base64Data,
            mimeType: file.type,
            fileName: file.name
          });
        };
        
        reader.onerror = function(error) {
          reject(new Error('Error leyendo el archivo: ' + error.message));
        };
        
        reader.readAsDataURL(file);
      });
    }
    
    // Enviar formulario
    function submitForm() {
      if (isSubmitting) {
        showMessage('Ya se est√° enviando el formulario, por favor espera', 'warning');
        return;
      }
      
      // Validar que tengamos c√≥digo ID si hay archivo
      const codigoId = document.getElementById('codigo_id').value;
      
      if (selectedFile && (!codigoId || codigoId.trim() === '')) {
        showMessage('Para subir un archivo, el campo C√≥digo ID es requerido', 'error', 'Validaci√≥n requerida');
        return;
      }
      
      // Recolectar datos
      const formData = {
        dni: document.getElementById('dni').value,
        fecha: document.getElementById('fecha').value,
        asiste: document.getElementById('asiste').value,
        nombres_apellidos: document.getElementById('nombres_apellidos').value,
        supervisor: document.getElementById('supervisor').value,
        cargo: document.getElementById('cargo').value,
        camp: document.getElementById('camp').value,
        t_trabajo: document.getElementById('t_trabajo').value,
        codigo_id: codigoId,
        compensado: document.getElementById('compensado').value,
        fecha_compensado: document.getElementById('fecha_compensado').value,
        observaciones: document.getElementById('observaciones').value,
        source: 'formulario',
        timestamp: new Date().toISOString()
      };
      
      // Si hay archivo, convertirlo a Base64
      if (selectedFile) {
        isSubmitting = true;
        showLoading('Subiendo archivo...');
        document.getElementById('submitBtn').disabled = true;
        
        // Mostrar progreso
        const progressFill = document.getElementById('progressFill');
        const progressText = document.getElementById('progressText');
        const uploadProgress = document.getElementById('uploadProgress');
        const fileStatus = document.getElementById('fileStatus');
        
        uploadProgress.style.display = 'flex';
        fileStatus.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> Subiendo...';
        fileStatus.style.color = '#4285f4';
        progressFill.style.width = '30%';
        progressText.textContent = '30%';
        
        convertFileToBase64(selectedFile)
          .then(fileData => {
            // Actualizar progreso
            progressFill.style.width = '70%';
            progressText.textContent = '70%';
            fileStatus.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> Enviando a servidor...';
            
            formData.archivoBase64 = fileData.base64;
            formData.archivoNombre = fileData.fileName;
            formData.archivoTipo = fileData.mimeType;
            
            // Continuar con el env√≠o normal
            sendFormData(formData);
          })
          .catch(error => {
            hideLoading();
            uploadProgress.style.display = 'none';
            isSubmitting = false;
            document.getElementById('submitBtn').disabled = false;
            fileStatus.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Error en conversi√≥n';
            fileStatus.style.color = '#EA4335';
            showMessage('Error procesando archivo: ' + error.message, 'error', 'Error de archivo');
          });
      } else {
        // Enviar sin archivo
        isSubmitting = true;
        showLoading();
        document.getElementById('submitBtn').disabled = true;
        sendFormData(formData);
      }
    }
    
    // Funci√≥n para enviar datos
    function sendFormData(formData) {
      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();
          
          // Ocultar barra de progreso si existe
          const uploadProgress = document.getElementById('uploadProgress');
          if (uploadProgress) {
            uploadProgress.style.display = 'none';
          }
          
          isSubmitting = false;
          document.getElementById('submitBtn').disabled = false;
          
          if (response.success) {
            // Construir mensaje de √©xito
            let successMessage = `
              <div style="line-height: 1.6;">
                <div style="font-size: 16px; font-weight: bold; color: #155724; margin-bottom: 10px;">
                  ‚úÖ ${response.message}
                </div>
                <div style="background: white; padding: 12px; border-radius: 6px; border-left: 4px solid #28a745; margin: 10px 0;">
                  <strong>üìã Detalles del registro:</strong><br>
                  ‚Ä¢ <strong>DNI:</strong> ${response.details.dni}<br>
                  ‚Ä¢ <strong>Nombre:</strong> ${response.details.nombre}<br>
                  ‚Ä¢ <strong>Fila en Sheets:</strong> ${response.details.row}<br>
            `;
            
            // Si hay archivo, mostrar informaci√≥n adicional
            if (response.details.archivo && response.details.archivo !== 'Sin archivo') {
              successMessage += `
                  ‚Ä¢ <strong>Archivo subido:</strong> ${response.details.archivo}<br>
              `;
              
              if (response.details.archivoUrl) {
                successMessage += `
                  <div style="margin-top: 10px; padding: 8px; background: #e8f5e9; border-radius: 4px;">
                    <strong>üîó Enlace al archivo:</strong><br>
                    <a href="${response.details.archivoUrl}" target="_blank" 
                       style="color: #1155cc; text-decoration: none; font-weight: 500; display: inline-block; margin-top: 5px;">
                      <i class="fas fa-external-link-alt"></i> Abrir en Google Drive
                    </a>
                  </div>
                `;
              }
            }
            
            successMessage += `
                </div>
                <div style="font-size: 12px; color: #666; margin-top: 10px;">
                  <i class="fas fa-info-circle"></i> El archivo se guard√≥ como: <strong>${response.details.codigo_id}.[extensi√≥n]</strong>
                </div>
              </div>
            `;
            
            showMessage(successMessage, 'success', '¬°Registro Completado!');
            
            // Limpiar archivo del formulario despu√©s de √©xito
            if (selectedFile) {
              clearFileFromForm();
            }
            
            // Actualizar vista previa
            updatePreview();
            
          } else {
            // Mostrar error
            let errorMessage = `
              <div style="line-height: 1.6;">
                <div style="font-size: 16px; font-weight: bold; color: #721c24; margin-bottom: 8px;">
                  ‚ùå ${response.message || 'Error al procesar'}
                </div>
            `;
            
            if (response.error) {
              errorMessage += `
                <div style="background: white; padding: 10px; border-radius: 4px; border-left: 3px solid #dc3545; margin: 8px 0;">
                  <strong>Detalles:</strong><br>
                  ${response.error}
                </div>
              `;
            }
            
            errorMessage += `</div>`;
            
            showMessage(errorMessage, 'error', 'Error al guardar');
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          isSubmitting = false;
          document.getElementById('submitBtn').disabled = false;
          
          let errorMessage = 'Error de conexi√≥n con el servidor';
          if (error && error.message) {
            errorMessage += ': ' + error.message;
          }
          
          showMessage(errorMessage, 'error', 'Error de conexi√≥n');
        })
        .procesarDatos(formData);
    }
    
    // Limpiar campos editables
    function clearAdditionalFields() {
      if (selectedFile) {
        if (!confirm('¬øEst√° seguro de limpiar el formulario?\n\nEsto incluir√° el archivo seleccionado.')) {
          return;
        }
      }
      
      // Limpiar campos editables
      document.getElementById('compensado').value = '';
      document.getElementById('fecha_compensado').value = '';
      document.getElementById('observaciones').value = '';
      
      // Limpiar archivo si existe
      if (selectedFile) {
        clearFileFromForm();
      }
      
      updatePreview();
      showMessage('Formulario limpiado. Puede cargar un nuevo archivo si es necesario.', 'info', 'Formulario listo');
    }
    
    // Manejar tecla Enter
    document.addEventListener('keypress', function(e) {
      if (e.key === 'Enter' && !isSubmitting) {
        const activeElement = document.activeElement;
        const isEditable = activeElement.classList.contains('editable-field');
        
        if (isEditable && activeElement.tagName.toLowerCase() !== 'textarea') {
          e.preventDefault();
          submitForm();
        }
      }
    });
    
    // Actualizar vista previa autom√°ticamente
    document.querySelectorAll('.editable-field').forEach(element => {
      element.addEventListener('change', updatePreview);
      element.addEventListener('input', updatePreview);
    });
    
    // Prevenir edici√≥n en campos de solo lectura
    document.querySelectorAll('.read-only-field').forEach(element => {
      element.addEventListener('mousedown', function(e) {
        e.preventDefault();
        return false;
      });
      
      element.addEventListener('keydown', function(e) {
        e.preventDefault();
        return false;
      });
    });
  </script>


