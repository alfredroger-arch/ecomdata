        <!-- OPCI√ìN A: Imagen normal (recomendada) -->
        <div class="banner-container">
            <img src="URL_DE_TU_IMAGEN_AQUI.png" 
                 alt="Banner del √°rea" 
                 class="banner-image"
                 onerror="this.style.display='none'; document.getElementById('banner-backup').style.display='block';">
            
            <!-- Banner de respaldo si falla la imagen -->
            <div id="banner-backup" class="banner-background" style="display:none; background-color: <?= CONFIG.secondaryColor ?>;">
