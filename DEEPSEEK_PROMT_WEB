// Funci√≥n principal que se ejecuta al cargar la p√°gina
function doGet() {
  return HtmlService.createTemplateFromFile('Index')
    .evaluate()
    .setTitle(CONFIG.appTitle)
    .addMetaTag('viewport', 'width=device-width, initial-scale=1')
    .setFaviconUrl('https://www.google.com/s2/favicons?domain=google.com');
}

// Obtener configuraci√≥n para el frontend
function getConfig() {
  return CONFIG;
}

// Obtener todos los informes
function getInformes() {
  return INFORMES;
}

// Obtener informes filtrados por categor√≠a
function getInformesPorCategoria(categoria) {
  if (!categoria || categoria === 'todos') {
    return INFORMES;
  }
  return INFORMES.filter(informe => informe.categoria === categoria);
}

// Obtener categor√≠as √∫nicas para el filtro
function getCategorias() {
  const categorias = [...new Set(INFORMES.map(i => i.categoria))];
  return categorias.sort();
}

// Buscar informes por t√©rmino
function buscarInformes(termino) {
  if (!termino) return INFORMES;
  
  const terminoLower = termino.toLowerCase();
  return INFORMES.filter(informe => 
    informe.titulo.toLowerCase().includes(terminoLower) ||
    informe.descripcion.toLowerCase().includes(terminoLower) ||
    informe.categoria.toLowerCase().includes(terminoLower)
  );
}
