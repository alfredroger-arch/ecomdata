            <div class="header-stats">
                <div class="stat-item">
                    <div class="stat-number" id="total-dashboards">0</div>
                    <div class="stat-label">Dashboards</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="categorias-count">0</div>
                    <div class="stat-label">Categor√≠as</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="actualizados-hoy">0</div>
