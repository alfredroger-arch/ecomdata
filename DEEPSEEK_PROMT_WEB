    <!-- Scripts -->
    <script>
        // Variables globales
        let todosInformes = [];
        let categorias = [];
        
        // Inicializar cuando se carga la p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            cargarInformes();
            configurarEventos();
        });
        
        // Cargar informes desde Google Apps Script
        function cargarInformes() {
            mostrarLoading(true);
            
            google.script.run
                .withSuccessHandler(function(response) {
                    todosInformes = response;
                    cargarCategorias();
                    mostrarInformes(todosInformes);
                    actualizarEstadisticas(todosInformes);
                    mostrarLoading(false);
                })
                .withFailureHandler(function(error) {
                    console.error('Error al cargar informes:', error);
                    document.getElementById('informes-container').innerHTML = 
                        '<div class="message"><h3>Error al cargar los informes</h3><p>Por favor, intenta de nuevo m√°s tarde.</p></div>';
                    mostrarLoading(false);
                })
                .getInformes();
        }
        
        // Cargar categor√≠as para el filtro
        function cargarCategorias() {
            google.script.run
                .withSuccessHandler(function(response) {
                    categorias = response;
                    const select = document.getElementById('filter-category');
                    
                    // Limpiar opciones excepto la primera
                    while (select.options.length > 1) {
                        select.remove(1);
                    }
                    
                    // Agregar categor√≠as
                    categorias.forEach(categoria => {
                        const option = document.createElement('option');
                        option.value = categoria;
                        option.textContent = categoria;
                        select.appendChild(option);
                    });
                })
                .getCategorias();
        }
        
        // Mostrar informes en la grid
        function mostrarInformes(informes) {
            const container = document.getElementById('informes-container');
            
            if (informes.length === 0) {
                document.getElementById('no-results').classList.remove('hidden');
                container.innerHTML = '';
                return;
            }
            
            document.getElementById('no-results').classList.add('hidden');
            
            // Ordenar por fecha (m√°s reciente primero)
            informes.sort((a, b) => new Date(b.fecha) - new Date(a.fecha));
            
            // Generar HTML para cada informe
            let html = '';
            informes.forEach(informe => {
                const fechaFormateada = formatearFecha(informe.fecha);
                const prioridadClass = `priority-${informe.prioridad}`;
                
                html += `
                <div class="informe-card ${informe.prioridad}">
                    <div class="card-header">
                        <span class="card-category">${informe.categoria}</span>
                        <h3 class="card-title">
                            <span class="card-icon">${informe.icono}</span>
                            <span>${informe.titulo}</span>
                        </h3>
                        <p class="card-desc">${informe.descripcion}</p>
                    </div>
                    <div class="card-body">
                        <span class="priority-badge ${prioridadClass}">
                            Prioridad ${informe.prioridad}
                        </span>
                    </div>
                    <div class="card-footer">
                        <span class="card-date">üìÖ ${fechaFormateada}</span>
                        <a href="${informe.url}" target="_blank" class="card-link">
                            Abrir informe ‚Üí
                        </a>
                    </div>
                </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        // Configurar eventos de b√∫squeda y filtros
        function configurarEventos() {
            // B√∫squeda en tiempo real
            document.getElementById('search-input').addEventListener('input', function(e) {
                filtrarInformes();
            });
            
            // Filtro por categor√≠a
            document.getElementById('filter-category').addEventListener('change', function() {
                filtrarInformes();
            });
            
            // Filtro por prioridad
            document.getElementById('filter-priority').addEventListener('change', function() {
                filtrarInformes();
            });
            
            // Bot√≥n de actualizar
            document.getElementById('refresh-btn').addEventListener('click', function() {
                const icon = document.getElementById('refresh-icon');
                icon.textContent = '‚è≥';
                cargarInformes();
                setTimeout(() => {
                    icon.textContent = 'üîÑ';
                }, 1000);
            });
            
            // Buscar con Enter
            document.getElementById('search-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    filtrarInformes();
                }
            });
        }
        
        // Filtrar informes seg√∫n criterios
        function filtrarInformes() {
            const terminoBusqueda = document.getElementById('search-input').value;
            const categoriaSeleccionada = document.getElementById('filter-category').value;
            const prioridadSeleccionada = document.getElementById('filter-priority').value;
            
            let informesFiltrados = todosInformes;
            
            // Filtrar por b√∫squeda
            if (terminoBusqueda) {
                const termino = terminoBusqueda.toLowerCase();
                informesFiltrados = informesFiltrados.filter(informe => 
                    informe.titulo.toLowerCase().includes(termino) ||
                    informe.descripcion.toLowerCase().includes(termino) ||
                    informe.categoria.toLowerCase().includes(termino)
                );
            }
            
            // Filtrar por categor√≠a
            if (categoriaSeleccionada && categoriaSeleccionada !== 'todos') {
                informesFiltrados = informesFiltrados.filter(informe => 
                    informe.categoria === categoriaSeleccionada
                );
            }
            
            // Filtrar por prioridad
            if (prioridadSeleccionada && prioridadSeleccionada !== 'todas') {
                informesFiltrados = informesFiltrados.filter(informe => 
                    informe.prioridad === prioridadSeleccionada
                );
            }
            
            mostrarInformes(informesFiltrados);
            actualizarEstadisticas(informesFiltrados);
        }
        
        // Actualizar estad√≠sticas en el header
        function actualizarEstadisticas(informes) {
            // Total de informes
            document.getElementById('total-informes').textContent = informes.length;
            
            // N√∫mero de categor√≠as √∫nicas
            const categoriasUnicas = [...new Set(informes.map(i => i.categoria))];
            document.getElementById('categorias-count').textContent = categoriasUnicas.length;
            
            // Informes actualizados hoy
            const hoy = new Date().toISOString().split('T')[0];
            const actualizadosHoy = informes.filter(i => i.fecha === hoy).length;
            document.getElementById('actualizado-hoy').textContent = actualizadosHoy;
        }
        
        // Formatear fecha
        function formatearFecha(fechaString) {
            const fecha = new Date(fechaString);
            return fecha.toLocaleDateString('es-ES', {
                day: '2-digit',
                month: 'short',
                year: 'numeric'
            });
        }
        
        // Mostrar/ocultar loading
        function mostrarLoading(mostrar) {
            document.getElementById('loading').classList.toggle('hidden', !mostrar);
        }
        
        // Funciones del footer
        function showHelp() {
            alert('üí° Ayuda:\n\n‚Ä¢ Usa la barra de b√∫squeda para encontrar informes espec√≠ficos\n‚Ä¢ Filtra por categor√≠a o prioridad\n‚Ä¢ Haz clic en "Abrir informe" para acceder al documento\n‚Ä¢ Actualiza la p√°gina para obtener la informaci√≥n m√°s reciente');
        }
        
        function showAbout() {
            alert(`‚ÑπÔ∏è Acerca de:\n\n${CONFIG.appTitle}\n\nPortal centralizado de acceso a informes corporativos.\n\nDesarrollado con Google Apps Script.\n\n¬© ${new Date().getFullYear()} ${CONFIG.companyName}`);
        }
        
        // Funci√≥n para agregar nuevo informe (si se implementa backend)
        function agregarInforme() {
            // Esta funci√≥n se puede expandir para agregar formulario de nuevo informe
            alert('Funci√≥n para agregar nuevos informes - En desarrollo');
        }
    </script>
</body>
</html>
